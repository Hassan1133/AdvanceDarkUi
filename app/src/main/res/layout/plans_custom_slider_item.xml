<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/plans_corner_bg"
    android:layout_margin="@dimen/_10sdp"
    android:elevation="@dimen/_5sdp"
    android:padding="@dimen/_10sdp"
    >
    <RelativeLayout
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:background="@drawable/star_bg"
        >

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_centerInParent="true"
            android:padding="@dimen/_2sdp"
            android:src="@drawable/star" />
    </RelativeLayout>
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/purple_700"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Premium"
        android:textSize="@dimen/_14sdp"
        android:fontFamily="@font/quick_bold"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/l_black"
        android:text="PKR: 5.99"
        android:layout_marginTop="@dimen/_3sdp"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="@font/quick_bold"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center"

        >
        <ImageView
            android:layout_width="@dimen/_12sdp"
            android:layout_height="@dimen/_12sdp"
            android:src="@drawable/tick"
            app:tint="@color/purple_700" />
        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sdp"
            android:text="2x Speed"
            android:layout_marginStart="@dimen/_10sdp"
            android:textColor="@color/black"
            android:fontFamily="@font/quick_bold"
            />
    </LinearLayout>
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get premium benefits at a special\n friendly price."
        android:layout_marginTop="@dimen/_20sdp"
        android:textAlignment="center"
        android:fontFamily="@font/quick_regular"
        android:textColor="@color/l_black"
        android:textSize="@dimen/_10sdp"
        />
</LinearLayout>