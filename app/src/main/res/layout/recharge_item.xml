<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginTop="@dimen/_5sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:layout_marginBottom="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_3sdp"
    android:outlineAmbientShadowColor="@color/purple_700"
    android:outlineSpotShadowColor="@color/purple_700"
    app:cardBackgroundColor="@color/white"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"

        >
        <TextView
            android:id="@+id/nameAlpha"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/icon_bg"
            android:text="MA"
            android:maxLength="2"
            android:gravity="center"
            android:fontFamily="@font/quick_bold"
            android:textColor="@color/black"
            />
        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Mohsin"
            android:textSize="@dimen/_12sdp"
            android:fontFamily="@font/quick_bold"
            android:layout_toEndOf="@id/nameAlpha"
            android:layout_marginStart="@dimen/_10sdp"
            />
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:text="00000000000"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toEndOf="@id/nameAlpha"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/quick_regular"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/rech_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/phone"
            android:text="Jazz - Topup"
            android:textSize="@dimen/_9sdp"
            android:textColor="@color/l_black"
            android:layout_marginTop="@dimen/_3sdp"
            android:layout_toEndOf="@id/nameAlpha"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/quick_regular"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_5sdp"
            android:src="@drawable/angle_right"
            android:padding="@dimen/_5sdp"
            app:tint="@color/purple_700" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>